{block}

    {snippet extra-pay-form}
        <div class="row">
            <div class="col-xs-12 form-group">
                {form form class => 'form-horizontal'}

                    {if $form->hasErrors()}
                        {foreach $form->errors as $error}
                            <div class="alert alert-danger">
                                <strong>Chyba: </strong>{$error}
                            </div>
                        {/foreach}
                    {/if}

                    {foreach $form->getControls() as $control}
                        <div class="input-group">
                            {if $control->name == 'ept'}

                                {include switch 'control' => $control}

                            {else}
                                {input $control 'placeholder' => $control->caption}
                            {/if}

                        </div>
                    {/foreach}
                {/form}
            </div>
        </div>
       {*} <div class="row">
            <div class="col-xs-3">
                <label>
                    <input name="switch-field-1" class="ace ace-switch" type="checkbox">
                    <span class="lbl"></span>
                </label>
            </div>

            <div class="col-xs-3">
                <label>
                    <input name="switch-field-1" class="ace ace-switch ace-switch-2" type="checkbox">
