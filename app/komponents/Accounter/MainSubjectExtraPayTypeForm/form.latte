                </label>
            </div>
        </div>*}
    {/snippet}

    {define switch}

        {foreach $control->getItems() as $key => $item}

        {var $checked = ''}
        {foreach $control->getRawValue() as $value}
            {if $value == $key}
                {var $checked = 'checked="checked"'}
            {/if}
        {/foreach}

        <div class="row">

                        <label class="pull-right inline">
                            <small class="muted smaller-90">{$item}:</small>

                            <input name="{$control->getHtmlName()}" {$checked|noescape} type="checkbox" class="ace ace-switch ace-switch-5" value="{$key}">
                            <span class="lbl middle" data-lbl="Ano&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Ne"></span>
                        </label>

                            {*}<label>
                                <input name="{$control->getHtmlName()}" class="ace ace-switch" type="checkbox" {$checked} value="{$key}">
                                <span class="lbl active" data-lbl="Ano&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Ne"></span>
                            </label>*}

        </div>
        {/foreach}

    {/define}
